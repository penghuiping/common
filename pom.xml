<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>common</artifactId>
    <groupId>com.php25</groupId>
    <version>2.0.1-SNAPSHOT</version>

    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
        <common-core.version>0.0.1-SNAPSHOT</common-core.version>
        <common-es.version>0.0.1-SNAPSHOT</common-es.version>
        <common-jdbc.version>0.0.1-SNAPSHOT</common-jdbc.version>
        <common-jpa.version>0.0.1-SNAPSHOT</common-jpa.version>
        <common-mvc.version>0.0.1-SNAPSHOT</common-mvc.version>
        <common-redis.version>0.0.1-SNAPSHOT</common-redis.version>
    </properties>

    <modules>
        <module>core</module>
        <module>es</module>
        <module>jdbc</module>
        <module>jpa</module>
        <module>mvc</module>
        <module>redis</module>
        <module>common-spring-boot-starter</module>
        <module>sample</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- Import dependency management from Spring Boot -->
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>2.0.2.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.php25</groupId>
                <artifactId>common-dependencies</artifactId>
                <version>0.0.1.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <artifactId>core</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-core.version}</version>
            </dependency>
            <dependency>
                <artifactId>es</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-es.version}</version>
            </dependency>
            <dependency>
                <artifactId>jdbc</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-jdbc.version}</version>
            </dependency>
            <dependency>
                <artifactId>jpa</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-jpa.version}</version>
            </dependency>
            <dependency>
                <artifactId>mvc</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-mvc.version}</version>
            </dependency>
            <dependency>
                <artifactId>redis</artifactId>
                <groupId>com.php25</groupId>
                <version>${common-redis.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>